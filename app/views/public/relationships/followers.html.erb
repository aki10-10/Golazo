<div class="container">
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Introduction</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image('60x60') %></td>
              <td><%= user.name %></td>
              <td><%= user.introduction %></td>
              <td><%= link_to "show", public_user_path(user.id) %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
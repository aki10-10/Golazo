<div class="container">
  <div class="row">
    <div class="col-9">
      <h5>タグが<%=@tag.name%>の投稿一覧</h5>
      <!--タグリスト-->
      <% @tag_list.each do |list|%>
        <%=link_to list.name,public_search_tag_path(tag_id: list.id) %>
        <%="(#{list.blogs.count})" %>
      <% end %>
      <% @blogs.each do |blog| %>
        <!--投稿はカードで囲む-->
        <div class="card">
          <div class="card-body">
        <!--タイトル表示される文字数は２５文字までにしてます-->
            <h6 class="card-title">
            <%=link_to public_blog_path(blog.id) do %>
              <%= blog.title.truncate(25) %>
            <% end %>
            </h6>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>写真の情報入力</h2>
      <% if @blog.errors.any? %>
        <%= @blog.errors.count %>件のエラーが発生しました
        <ul>
          <% @blog.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @blog,url: public_blogs_path, local:true do |f| %>

        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image,class: "form-control-file user_image", accept: "image/*" %>
        </div>
        
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title,placeholder: "(必須)",class: "form-control title" %>
        </div>
        
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body,placeholder: "(必須)",class: "form-control title" %>
        </div>
        
        <div class="field">
          <%= f.label"タグ (,で区切ると複数タグ登録できます)" %>
          <%= f.text_field :name,value: @tag_list,class:"form-control"%>
        </div>
  
  　     <div class="actions" style="margin:20px 0;">
          <%= f.submit "投稿",class:"btn btn-outline-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>  
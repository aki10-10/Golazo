<% if blog.favorited_by?(current_user) %>
  <p>
    <%= link_to public_blog_favorites_path(blog), method: :delete,remote: true do %>
      ♥<%= blog.favorites.count %> いいね
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to public_blog_favorites_path(blog), method: :post,remote: true do %>
      ♡<%= blog.favorites.count %> いいね
    <% end %>
  </p>
<% end %>
<div class="container">
  <div class="row">
    <%= form_with model: @user,url: public_user_path, local:true do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name,class: "form-control-file name", autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_field :introduction,class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :profile_image,class: "form-control-file profile_image", placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="actions" style="margin:20px 0;">
        <%= f.submit "投稿",class:"btn btn-outline-primary btn-block" %>
      </div>
      <div class="col">
        <%= link_to "退会手続き", public_unsubscribe_path, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>
<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to public_user_path(user.id) do %>
              <%= image_tag user.get_profile_image("50x50"),class:"mt-3 rounded-circle"; %>
              <%= user.name %></td>
            <% end %>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBlogの時) -->
    <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td>
            <%= link_to public_user_path(blog.user.id) do %>
              <%= image_tag blog.user.get_profile_image("50x50"),class:"mt-3 rounded-circle"; %>
              <%= blog.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to public_blog_path(blog.id) do %>
              <%= blog.title %>
            <% end %>
          </td>
          <td>
            <%= image_tag blog.get_image("100x100") %>
          </td>
          <td>
            投稿日:<%= blog.created_at.strftime('%Y/%m/%d/%H:%M') %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
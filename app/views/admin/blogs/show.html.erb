<div class="container">
  <div class="row">
    <div class="col-md-8">
      <strong><h1><%= @blog.title %></h1></strong>
      <h3><%= @blog.body %></h3>
      <%= image_tag @blog.get_image("500x1000") %>
        <p>
          <%= link_to admin_user_path(@blog.user.id) do %>
            <%= image_tag @blog.user.get_profile_image("100x100"),class:"mt-3 rounded-circle"; %>
        　 　<%= @blog.user.name %>
          <% end %>
          <%= @blog.created_at.strftime('%Y/%m/%d/%H:%M') %>
        </p>
    </div>
  </div>
  
  <div class="row">
    <div class='col-md-8'>
      <table class='table'>
        コメント：<%= @blog.comments.count %>件
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Comment</th>
            <th>投稿日</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @blog.comments.each do |comment| %>
            <tr>
              <td><%= image_tag comment.user.get_profile_image('100x100')%></td>
              <td><%= comment.user.name %></td>
              <td><%= comment.content %></td>
              <td><%= comment.created_at.strftime('%Y/%m/%d/%H:%M') %></td>
              
              <td><%= link_to "削除", admin_blog_comment_path(comment.blog, comment), method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
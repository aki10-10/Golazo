<div class="container">
  <div class="row">
    <div class="col-9">
      <table class='table table-hover table-inverse'>
        <tbody>
        <% @blogs.each do |blog| %>
          <tr>
            <td>
              <%= link_to admin_user_path(blog.user.id) do %>
                <%= image_tag blog.user.get_profile_image("50x50"),class:"mt-3 rounded-circle"; %>
                <%= blog.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_blog_path(blog.id) do %>
                <%= blog.title %>
              <% end %>  
            </td>
            <td>
              <%= image_tag blog.get_image("100x100") %>
            </td>
            <td>
              投稿日:<%= blog.created_at.strftime('%Y/%m/%d/%H:%M') %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>